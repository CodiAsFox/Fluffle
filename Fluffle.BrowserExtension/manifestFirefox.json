{
  "manifest_version": 2,
  "name": "Fluffle",
  "description": "Helping critters with finding the sources of furry artwork.",
  "version": "1.0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "icons": {
    "16": "/icons/16.png",
    "32": "/icons/32.png",
    "48": "/icons/48.png",
    "128": "/icons/128.png"
  }
}
